# Temporarily store uncommited changes
git stash

# Verify correct branch
git checkout develop

# Build new files
cd ./my-site
stack exec site clean
stack exec site build
xelatex ./_site/resume.tex
mv ./resume.pdf ./_site/pdfs/
git add ./_site/pdfs/resume.pdf
git commit -m "Compile Resume"
cd -

# Get previous files
git fetch --all
git checkout -b master --track origin/master

# Overwrite existing files with new files
cp -a my-site/_site/. .

# Commit
git add -A
git commit -m "Publish."

# Push
git push origin master:master

# Restoration
git checkout develop
git branch -D master
git stash pop
